{
  "name": "comet-browser",
  "version": "0.1.3",
  "private": true,
  "description": "Comet AI Browser - A high-performance, intelligence-driven browsing workspace with local LLM support and advanced productivity features.",
  "author": "Latestinssan",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "npm run electron-dev",
    "electron-dev": "next dev",
    "electron-start": "electron .",
    "build": "next build",
    "start": "npx serve@latest out",
    "lint": "eslint",
    "build-electron": "npm run build && electron-builder"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.13.4",
    "@tensorflow/tfjs": "^4.22.0",
    "cross-fetch": "^4.1.0",
    "electron-context-menu": "^4.1.1",
    "firebase": "^12.7.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.562.0",
    "mysql2": "^3.11.5",
    "next": "^16.1.3",
    "pdf-lib": "^1.17.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-pdftotext": "^1.3.4",
    "tesseract.js": "^7.0.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "19.2.8",
    "concurrently": "^8.2.2",
    "electron": "28.3.3",
    "electron-builder": "^26.0.12",
    "eslint": "^8.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.latestinssan.cometbrowser",
    "productName": "Comet Browser",
    "copyright": "Copyright Â© 2026 Latestinssan",
    "files": [
      "out/**/*",
      "!out/web/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "LICENSE.txt",
      "icon.ico"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE.txt",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Comet Browser"
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis"
      ]
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  }
}